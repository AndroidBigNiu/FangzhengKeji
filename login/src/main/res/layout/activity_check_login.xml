<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.CheckLoginActivity"
    android:orientation="vertical"
    android:background="@drawable/login1"
    >
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/raw_1500019926"
        android:id="@+id/return_back"
        />
    <ImageView
        android:layout_marginTop="70dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:id="@+id/check_touxiang"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        >
        <com.github.rubensousa.raiflatbutton.RaiflatButton
            android:id="@+id/normalButton"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信登陆" />
        <com.github.rubensousa.raiflatbutton.RaiflatButton
            android:id="@+id/QQButton"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ登陆" />
        <TextView
            android:id="@+id/elselogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他方式登录"
            android:textColor="@color/md_deep_orange_A100"
            />


    </LinearLayout>


</LinearLayout>